@model LB_1.Config

@{
    ViewData["Title"] = "Змінити";
}

<h1>Змінити</h1>

<h4>Конфігурацію</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RoundTime" class="control-label"></label>
                <input asp-for="RoundTime" class="form-control" />
                <span asp-validation-for="RoundTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinBet" class="control-label"></label>
                <input asp-for="MinBet" class="form-control" />
                <span asp-validation-for="MinBet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">До списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
